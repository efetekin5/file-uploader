<header class="header">
    <nav class="nav">
        <a href="/" class="headerLogo">File Uploader</a>
        <ul class="headerUL">
            <% if (!locals.currentUser) { %>
                <li>
                    <a href="/login">
                        <button class="headerButtonLogin">Log In</button>
                    </a>
                </li>

                <li>
                    <a href="/sign-up">
                        <button class="headerButtonSignUp">Sign Up</button>
                    </a>
                </li>
            <% } else { %>
                <li>
                    <a href="/logout">
                        <button class="headerButtonLogin">Logout</button>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>